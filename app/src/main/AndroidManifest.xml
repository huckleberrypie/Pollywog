<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="org.strawberryforum.pollywog" android:versionCode="1" android:versionName="@string/version">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:screenOrientation="landscape"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AboutActivity"
            android:screenOrientation="landscape"
            android:label="@string/aboutTitle"/>
        <activity android:name=".ResourcesActivity"
            android:screenOrientation="landscape"
            android:label="@string/resourcesTitle"/>
        <activity android:name=".Licences"
            android:screenOrientation="landscape"
            android:label="@string/licenceTitle"/>
    </application>

</manifest>
